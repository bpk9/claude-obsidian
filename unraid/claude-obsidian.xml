<?xml version="1.0"?>
<Container version="2">
  <Name>Obsidian-Claude</Name>
  <Repository>bpk9/claude-obsidian</Repository>
  <Registry>https://hub.docker.com/r/bpk9/claude-obsidian</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/bpk9/claude-obsidian/issues</Support>
  <Project>https://github.com/bpk9/claude-obsidian</Project>
  <Overview>
    A hybrid container combining Obsidian (GUI knowledge base) and Claude Code (CLI AI agent).
    Features persistent SSH access for mobile AI interactions with your notes.

    [b]Default SSH Port:[/b] 2222 (internal)
    [b]Default User:[/b] abc

    Access Obsidian via web browser at the Web GUI port.
    SSH into the container to use Claude Code from any terminal or mobile device.
  </Overview>
  <Category>Productivity: Tools:AI</Category>
  <WebUI>http://[IP]:[PORT:3000]/</WebUI>
  <Icon>https://raw.githubusercontent.com/bpk9/claude-obsidian/master/icon.png</Icon>
  <ExtraParams>--shm-size=1gb</ExtraParams>
  <PostArgs/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="Web GUI Port" Target="3000" Default="3000" Mode="tcp" Description="KasmVNC Web Interface for Obsidian" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="HTTPS GUI Port" Target="3001" Default="3001" Mode="tcp" Description="KasmVNC HTTPS Web Interface" Type="Port" Display="always" Required="false" Mask="false"/>
  <Config Name="SSH Port" Target="2222" Default="2222" Mode="tcp" Description="SSH Access Port for Claude Code" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="Vault Storage" Target="/config" Default="/mnt/user/appdata/claude-obsidian" Mode="rw" Description="Persistent storage for Obsidian vault, SSH keys, and Claude config" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="TZ" Target="TZ" Default="America/New_York" Mode="" Description="Timezone" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="PASSWORD" Target="PASSWORD" Default="" Mode="" Description="Password for SSH user 'abc'. If not set, a random password will be generated and logged." Type="Variable" Display="always" Required="false" Mask="true"/>
</Container>
